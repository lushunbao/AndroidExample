<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.study.lusb1.screenprop.MainActivity">

    <TextView
        android:id="@+id/width_dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="@string/width_dp"/>
    <TextView
        android:id="@+id/width_dp_content"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/text_cal"
        android:layout_toRightOf="@+id/width_dp"/>

    <TextView
        android:id="@+id/height_dp_content"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="@string/text_cal"
        android:gravity="center"/>
    <TextView
        android:id="@+id/height_dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/height_dp_content"
        android:text="@string/height_dp"/>

    <TextView
        android:id="@+id/width_px"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/width_dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="@string/width_px"/>
    <TextView
        android:id="@+id/width_px_content"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/width_dp_content"
        android:text="@string/text_cal"
        android:gravity="center"
        android:layout_toRightOf="@+id/width_px"/>

    <TextView
        android:id="@+id/height_px_content"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/height_dp_content"
        android:layout_alignParentRight="true"
        android:text="@string/text_cal"
        android:gravity="center"/>
    <TextView
        android:id="@+id/height_px"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/height_dp"
        android:layout_toLeftOf="@+id/height_px_content"
        android:text="@string/height_px"/>

    <TextView
        android:id="@+id/density_content"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/height_px_content"
        android:layout_alignParentRight="true"
        android:text="@string/text_cal"
        android:gravity="center"/>
    <TextView
        android:id="@+id/density"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/height_px"
        android:layout_toLeftOf="@+id/height_px_content"
        android:text="@string/density"/>

    <Button
        android:id="@+id/btn_get_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_get_info"
        android:onClick="onClick"/>



</RelativeLayout>
