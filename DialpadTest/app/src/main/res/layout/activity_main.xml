<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.study.lusb1.dialpadtest.MainActivity">

    <LinearLayout
        android:id="@+id/left_space"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1">
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"/>
        <Button
            android:id="@+id/btn_to_left"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="toLeft"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            style="@style/DialpadKeyStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="1"/>
        <TextView
            style="@style/DialpadKeyStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="4"/>
        <TextView
            style="@style/DialpadKeyStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="7"/>
        <TextView
            style="@style/DialpadKeyStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="*"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            style="@style/DialpadKeyStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="2"/>
        <TextView
            style="@style/DialpadKeyStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="5"/>
        <TextView
            style="@style/DialpadKeyStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="8"/>
        <TextView
            style="@style/DialpadKeyStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            style="@style/DialpadKeyStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="3"/>
        <TextView
            style="@style/DialpadKeyStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="6"/>
        <TextView
            style="@style/DialpadKeyStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="9"/>
        <TextView
            style="@style/DialpadKeyStyle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="#"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_space"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0">
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"/>
        <Button
            android:id="@+id/btn_to_right"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="toRight"/>
    </LinearLayout>
</LinearLayout>
